$photo_color = #006CB3;

.person 
	text-align: center;

	&__photo
		background-color: $photo_color;
		position: absolute;
		top: 0;
		left: 0;
		border-radius: 50%;
		width: 90%;
		margin: 5%;

		&:before
			content: "";
			display: block;
			padding-top: 100%;

	&__photo-frame
		position: relative;
		border: 2px solid $photo_color;
		border-radius: 50%;
		max-width: 15.4rem;
		margin: 0 auto;
		left: 0.6rem;
		bottom: 0.1rem;

		&:before
			content: "";
			display: block;
			padding-top: 100%;

	&__name
		margin-left: 5.5%;
		position: relative;
		right: 0.2rem;

	&__first-name
		text-transform: uppercase;
		font-family: MyriadPro-LightSemiExt, 'Arial';
		font-size: 3.67rem;
		top: 1.65rem;
		position: relative;

	&__specialty
		top: 0.15em;
		text-transform: uppercase;
		font-family: MyriadPro-Bold, 'Arial';
		font-size: 1.634rem;
		position: relative;

	&__surname
		top: 0.05em;
		text-transform: uppercase;
		font-family: MyriadPro-Bold, 'Arial';
		font-size: 4.17rem;
		position: relative;


@media screen and (max-width: 55em) {
	.person__photo-frame {
		left: 0;
		bottom: 0;
	}
}


@media screen and (max-width: 55em) {
	.person__name {
        margin-left: 0;
        right: 0;
    }
}