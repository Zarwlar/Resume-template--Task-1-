$annotation_text_color = #006CB3;
$line_color = #3b6cb0;
$background-color = #fff;

.annotation
    position: relative;
    display: flex;
    align-items: center;

    &__text
        display: inline-block;
        position: relative;
        text-transform: uppercase; 
        font-family: MyriadPro-Bold, 'Arial';
        font-size: 2.79rem;
        color: $annotation_text_color;
        background: $background-color;
        padding-left: 2.5%;
        padding-right: 2%;
        margin: 0;

    &__icon
        background: $background-color;
        position: relative;
        height: 5em;

    &__profile
        margin-top: 14.85%
        margin-bottom: 3.3%

    &__contact
        margin-top: 10.5%;
        margin-bottom: 6.4%;

    &__skills
        margin-top: 11.1%;
        margin-bottom: 6%;

    &__education
        margin-top: 1.5%;
        margin-bottom: 4%;

    &__experience
        margin-top: 8.3%;
        margin-bottom: 6.5%;

    &__software
        margin-top: 8.6%;
        margin-bottom: 1.2%;

    &__line
        background-color: $line_color;
        position: absolute;
        width: 100%;
        z-index: -1;
        border-top: 0.15rem solid $background-color;
        border-bottom: 0.4rem solid $line_color;