$progress-bar_passive-color = #e6e6e6;
$progress-bar_active-color = #3d6cb0;

.software
    display: flex;

    &__column
        width: 45%;

        &:first-child
            margin-right: 10.5%;
            margin-left: 1.2%;

    &__product
        margin-bottom: 6.7%;

    &__progress-bar
        height: 1.45em;
        background: $progress-bar_passive-color; 
        display: inline-block;
        width: 100%;

        &_points
            height: inherit;
            background-color: $progress-bar_active-color;
            display: inline-block;

    &__product
        margin-bottom: 6.7%;

    &__progress-bar-name
        font-size: 1.75em;
        font-family: MyriadPro-Regular, 'Arial';
        margin: 0.5em auto;
        text-transform: uppercase;

@media screen and (max-width: 30em) {
    .software {
        flex-direction: column;
        width: 100%;
    }
    .software__column {
        width: 100%;
    }
    .sotftware__column:first-child {
        margin: auto auto;
    }
    .software__column .software__product:last-child {
        margin-bottom: auto;
    }
}