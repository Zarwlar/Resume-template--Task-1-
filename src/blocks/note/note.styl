.note
    margin-top: 2%;
    position: relative;

    &__text
        margin-left: 8.4%;

    &__mark
        margin-left: 1.7%;
        margin-top: 1%;
        width: 1.5rem;
        max-width: 5%;
        background-color: black;
        border-radius: 50%;
        position: absolute;

        &:before
            content: "";
            display: block;
            padding-top: 100%;

    &__title
        text-transform: uppercase;
        font-weight: bold;
        font-family: MyriadPro-Bold, 'Arial';
        font-size: 1.75rem;
        display: inline-block;

    &__place
        text-transform: uppercase;  
        display: block;
        font-size: 1.75em;
        font-family: MyriadPro-Regular, 'Arial';
        display: inline-block;

    &__description
        margin-top: 1%;
        font-size: 1.05rem;
        font-family: MyriadPro-Regular, 'Arial';
        display: inline-block;
        margin-bottom: 0;

    &__date
        font-size: 1.75em;
        font-family: MyriadPro-Regular, 'Arial';
        margin-left: 2.4%;
        display: inline-block;

@media screen and (max-width: 55em) {
    .note__place, .note__title, .note__date {
        font-size: 1.45rem;
    }
}

