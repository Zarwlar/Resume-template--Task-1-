.container 
    max-width: 1366px;
    margin: 0 auto;

    &__main
        width: 100%;
        position: relative;

        &:after, &:before 
            content: " "; 
            display: table; 

        &:after 
            clear: both; 

    &__column
        &_left
            float: left;
            width: 34%;
            font-size: 100%;
            margin-top: 6.8%;
            margin-left: 4.3%;
            margin-bottom: 7.7%;
            min-width: 22.5rem;

        &_right
            width: 51.7%;
            float: left;
            font-size: 100%;
            margin-top: 5.6%;
            margin-left: 6%;
            min-width: 35rem;


@media screen and (max-width: 33em) {
	html {
        font-size: 12px;
    }
}

@media screen and (max-width: 66em) {
	.container__column_left, .container__column_right {
		width: 100%;
		margin-left: 0;
	}
}
