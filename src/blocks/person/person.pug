mixin person__name(firstName, surName, specialty)
	div.person__name
		+person__first(firstName)
		+person__surname(surName)
		+person__specialty(specialty)

mixin person__first(firstName)
	div.person__first-name= firstName

mixin person__specialty(specialty)
	div.person__specialty= specialty

mixin person__surname(surname)
	div.person__surname= surname

mixin person__photo-frame()
	div.person__photo-frame
		div.person__photo

mixin person()
	div.person
		+person__photo-frame()
		+person__name('name here','surname','graphic designer')

