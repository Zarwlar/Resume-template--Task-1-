.note
	&::before 
		content: "‚óè";
		font-size: 3.1em;
		margin-right: 2.2%;
		position: relative;
		top: 0.15em;

	&__title
		text-transform: uppercase;
		font-weight: bold;
		font-family: MyriadPro-Bold, 'Arial';
		font-size: 1.75rem;

	&__position
		margin-left: 1.6%;
		margin-bottom: -3.8%;

	&__place
		text-transform: uppercase;
		margin-left: 6.6%;  
		display: block;
		font-size: 1.75em;
		font-family: MyriadPro-Regular, 'Arial';

	&__description
		display: block;
		margin-left: 7.1%;
		margin-top: 1%;
		font-size: 1.05rem;
		font-family: MyriadPro-Regular, 'Arial';

	&__date
		font-size: 1.75em;
		font-family: MyriadPro-Regular, 'Arial';
		margin-left: 2.4%;

@media screen and (max-width: 55em) {
	.note__place, .note__title, .note__date {
		font-size: 1.45rem;
	}
	.note::before {
		font-size: 2.1em;
	}
}

