$point_active_color = #3d6cb0;
$point_passive_color = #e6e6e6;

.skills
	text-align: center;

	&__skill
		position: relative;
		text-transform: uppercase;
		margin-right: 5%;
		margin-bottom: 3.5%;

	&__skill-name
		text-align: center;
		font-family: MyriadPro-Regular, 'Arial';
		margin: 2.5% auto;
		font-size: 1.75rem;

	&__list
		padding: 0;
		margin: 0;
		margin-left: 5%;   

	&__point
		border-radius: 50%;
		display: inline-block;
		height: 1.2rem;
		margin-right: 2.5%;
		position: relative;
		width: 1.25rem;
		left: 0.2rem;

		&_active
			background-color: $point_active_color;

		&_passive
			background: $point_passive_color;
