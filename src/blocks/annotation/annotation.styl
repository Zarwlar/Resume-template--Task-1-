$annotation_text_color = #006CB3;
$line_color = #3b6cb0;
$background-color = #fff;

.annotation
	position: relative;

	&__text
		display: inline-block;
		position: relative;
		text-transform: uppercase; 
		font-family: MyriadPro-Bold, 'Arial';
		font-size: 2.79rem;
		color: $annotation_text_color;
		background: $background-color;
		bottom: 0.7rem;
		padding-left: 2.5%;
		padding-right: 2%;

	&__icon
		background: $background-color;
		position: relative;
		height: 5em;
		top: 1rem;

	&__position

		&_profile
			margin-top: 16.15%
			margin-bottom: 3.3%

		&_contact
			margin-top: 8.5%;
			margin-bottom: 6.4%;

		&_skills
			margin-top: 1.1%;
			margin-bottom: 5%;

		&_education
			margin-top: -2%;
			margin-bottom: 1.5%;

		&_experience
			margin-top: 10.1%;
			margin-bottom: 3.5%;

		&_software
			margin-top: 10.5%;
			margin-bottom: 1.2%;

	&__line
		background-color: $line_color;
		position: absolute;
		width: 100%;
		z-index: -1;
		top: 50%;
		outline-offset: -0.1rem;
		border-top: 0.15rem solid $background-color;
		border-bottom: 0.4rem solid $line_color;