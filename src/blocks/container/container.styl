.container 

    &__main
        width: 100%;
        position: relative;
        max-width: 1366px;
        margin: 0 auto;

        &:after, &:before 
            content: " "; 
            display: table; 

        &:after 
            clear: both; 

    &__column
        &_left
            float: left;
            width: 34%;
            font-size: 100%;
            margin-top: 6.8%;
            margin-left: 4.3%;
            margin-bottom: 5.7%;

        &_right
            width: 51.7%;
            float: left;
            font-size: 100%;
            margin-top: 4.6%;
            margin-left: 6%;

@media screen and (max-width: 66em) {
    .container__column_left, .container__column_right {
        width: 100%;
        margin-left: 0;
    }
}
